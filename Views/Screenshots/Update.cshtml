@model Screenshot
<!DOCTYPE html>
<html>
<body>
    <a asp-action="Create">Create new</a>
    <form class="align-self-baseline" asp-controller="Screenshots" asp-action="Update" method="post">
        <input class="align-self-baseline" asp-for="Url" value="@Model.Url" /><br />
        <input class="align-self-baseline" asp-for="GameId" value="@Model.GameId" /><br />
        <a class="align-self-baseline" asp-action="Get" asp-route-id="@Model.Id">Get</a>
        <a class="align-self-baseline" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        <button class="align-self-baseline" type="submit" value="Update" />
    </form>
</body>
</html>
@model IEnumerable<Gamer>
<!DOCTYPE html>
<html>
<body>
    <form class="align-self-baseline" asp-controller="Gamers" asp-action="Index" method="get">
        <a asp-action="Create">Add new critic</a>
        @foreach (Gamer gamer in Model)
        {
            <div class="align-self-baseline">
                <h4 class="align-self-baseline">@gamer.Login</h4><br />
                <h4 class="align-self-baseline">@gamer.Email</h4><br />
                <a class="align-self-baseline" asp-action="Delete" asp-route-id="@gamer.Id">Delete</a>
                <a class="align-self-baseline" asp-action="Get" asp-route-id="@gamer.Id">Get</a>
                <a class="align-self-baseline" asp-action="Update" asp-route-id="@gamer.Id">Update</a>
            </div>
        }
    </form>
</body>
</html>
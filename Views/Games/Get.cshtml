@model Game
<!DOCTYPE html>
<html>
<body>
    <form class="align-self-baseline" asp-controller="Games" asp-action="Get" method="get">
        <h4 class="align-self-baseline">@Model.Name</h4><br />
        <h4 class="align-self-baseline">@Model.AverageMark</h4><br />
        <h4 class="align-self-baseline">@Model.Developer</h4><br />
        <h4 class="align-self-baseline">@Model.Publisher</h4><br />
        <h4 class="align-self-baseline">@Model.Localization</h4><br />
        <h4 class="align-self-baseline">@Model.ReleaseDate</h4><br />
        <h4 class="align-self-baseline">@Model.Description</h4><br />
        <a class="align-self-baseline" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        <a class="align-self-baseline" asp-action="Update" asp-route-id="@Model.Id">Update</a>
    </form>
</body>
</html>
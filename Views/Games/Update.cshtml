@model Game
<!DOCTYPE html>
<html>
<body>
    <a asp-action="Create">Create new</a>
    <form class="align-self-baseline" asp-controller="Games" asp-action="Update" method="post">
        <input class="align-self-baseline" asp-for="Name" value="@Model.Name" /><br />
        <input class="align-self-baseline" asp-for="AverageMark" value="@Model.AverageMark" /><br />
        <input class="align-self-baseline" asp-for="Developer" value="@Model.Developer" /><br />
        <input class="align-self-baseline" asp-for="Publisher" value="@Model.Publisher" /><br />
        <input class="align-self-baseline" asp-for="Localization" value="@Model.Localization" /><br />
        <input class="align-self-baseline" asp-for="ReleaseDate" value="@Model.ReleaseDate" /><br />
        <input class="align-self-baseline" asp-for="Description" value="@Model.Description" /><br />
        <a class="align-self-baseline" asp-action="Get" asp-route-id="@Model.Id">Get</a>
        <a class="align-self-baseline" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        <button class="align-self-baseline" type="submit" value="Update" />
    </form>
</body>
</html>